<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screens.WithoutConnectionActivity">

    <TextView
        android:id="@+id/without_connection_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sad_gif"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/without_connection_text"
        app:layout_constraintStart_toStartOf="@id/without_connection_text"
        app:layout_constraintEnd_toEndOf="@id/without_connection_text"
        android:contentDescription="@string/image_without_connection" />

    <TextView
        android:id="@+id/message_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sad_gif"
        app:layout_constraintStart_toStartOf="@id/without_connection_text"
        app:layout_constraintEnd_toEndOf="@id/without_connection_text"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_margin="20dp"
    />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_update"
        app:layout_constraintEnd_toEndOf="@id/without_connection_text"
        app:layout_constraintStart_toStartOf="@id/without_connection_text"
        app:layout_constraintTop_toBottomOf="@id/message_error"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/black"
    />
</androidx.constraintlayout.widget.ConstraintLayout>