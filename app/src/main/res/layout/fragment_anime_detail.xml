<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_anime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_gray"
    tools:context=".screens.AnimeDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/background_top"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal" />

        <include
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            layout="@layout/toolbar_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back_white"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/anime_image"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@color/black_gray"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/anime_score_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cardView"
            app:layout_constraintStart_toEndOf="@id/cardView"
            android:text="@string/score"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
        />

        <TextView
            android:id="@+id/anime_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_score_textView"
            app:layout_constraintStart_toStartOf="@id/anime_score_textView"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_popularity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_score"
            app:layout_constraintStart_toStartOf="@id/anime_score_textView"
            android:text="@string/popularity"
            android:textSize="14sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_popularity_textview"
            app:layout_constraintStart_toStartOf="@id/anime_popularity_textview"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_members_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_popularity"
            app:layout_constraintStart_toStartOf="@id/anime_score_textView"
            android:text="@string/members"
            android:textSize="14sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_members_textview"
            app:layout_constraintStart_toStartOf="@id/anime_popularity_textview"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_favorites_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_members"
            app:layout_constraintStart_toStartOf="@id/anime_score_textView"
            android:text="@string/favorites"
            android:textSize="14sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/anime_favorites_textview"
            app:layout_constraintStart_toStartOf="@id/anime_popularity_textview"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/anime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/cardView"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
        />

        <LinearLayout
            android:id="@+id/anime_information"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anime_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
        >
            <TextView
                android:id="@+id/type_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_year"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
            />

            <TextView
                android:id="@+id/anime_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
            />

            <TextView
                android:id="@+id/episode_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/ep_duration"
                android:textStyle="bold"
                android:textSize="14sp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_genres"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/anime_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
        >
            <TextView
                android:id="@+id/anime_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="@id/youtube_player_view"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
            />

        </LinearLayout>

        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:id="@+id/expandable_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxCollapsedLines="4"
            app:animDuration="200"
            app:layout_constraintTop_toBottomOf="@id/linear_genres"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        >
            <TextView
                android:id="@+id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:textSize="16sp"
            />

            <ImageButton
                android:id="@+id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@color/transparent"
                android:padding="16dp"
            />
        </com.ms.square.android.expandabletextview.ExpandableTextView>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:showFullScreenButton="false"
            app:layout_constraintTop_toBottomOf="@id/expandable_text_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>