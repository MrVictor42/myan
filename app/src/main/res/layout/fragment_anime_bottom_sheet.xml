<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        android:backgroundTint="@color/black_gray"
        app:cardElevation="10dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:context=".modals.AnimeBottomSheetFragment"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <View
                android:id="@+id/viewLineExpanded"
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray"
                />

            <ImageView
                android:id="@+id/image_modal"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewLineExpanded" />

            <TextView
                android:id="@+id/title_modal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_modal"
                app:layout_constraintTop_toBottomOf="@id/viewLineExpanded"/>

            <TextView
                android:id="@+id/year_modal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_modal"
                app:layout_constraintTop_toBottomOf="@id/title_modal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="@string/year"
                android:textColor="@color/white"
            />

            <TextView
                android:id="@+id/year_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/year_modal_text"
                app:layout_constraintTop_toBottomOf="@id/title_modal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/episodes_modal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_modal"
                app:layout_constraintTop_toBottomOf="@id/year_modal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/episodes"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/episode_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/episodes_modal_text"
                app:layout_constraintTop_toBottomOf="@id/year_modal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
            />

            <TextView
                android:id="@+id/score_modal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_modal"
                app:layout_constraintTop_toBottomOf="@id/episodes_modal_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="@string/score"
            />

            <TextView
                android:id="@+id/score_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/score_modal_text"
                app:layout_constraintTop_toBottomOf="@id/episode_modal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
            />

            <Button
                android:id="@+id/btn_more_information_modal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/more_informations"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/orange"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/score_modal_text"
                app:layout_constraintStart_toStartOf="@id/score_modal_text"
                app:layout_constraintEnd_toEndOf="@id/title_modal"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>