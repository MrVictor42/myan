<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragments.tablayouts.lists.crud.CreateListFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shape_image_personal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/select_image"
            android:textColor="@color/white"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
            android:id="@+id/name_playlist_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_list"
            android:textColorHint="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:autofillHints="true"
            android:maxLines="1"
            android:padding="20dp"
            android:background="@drawable/circle_edit_text"
            android:textColor="@color/gray_light"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@id/btn_select_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />
        <EditText
            android:id="@+id/description_playlist_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description_list"
            android:textColorHint="@color/black"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:autofillHints="true"
            android:maxLines="1"
            android:padding="20dp"
            android:background="@drawable/circle_edit_text"
            android:textColor="@color/gray_light"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@id/name_playlist_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_list"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            app:cornerRadius="20dp"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:drawableEnd="@drawable/ic_save"
            android:background="@drawable/circle_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_playlist_edit_text"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>