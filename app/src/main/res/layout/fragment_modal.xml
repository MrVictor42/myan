<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:backgroundTint="@color/orange"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_modal"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
        />

        <TextView
            android:id="@+id/text_modal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_modal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/year_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_modal"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_toEndOf="@id/image_modal"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_episode_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/episodes"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/year_modal"
            android:layout_below="@id/text_modal"/>

        <TextView
            android:id="@+id/episodes_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_below="@id/text_modal"
            android:layout_toEndOf="@id/text_episode_modal"
        />

        <TextView
            android:id="@+id/text_score_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/year_modal"
            android:layout_toEndOf="@id/image_modal"
        />

        <TextView
            android:id="@+id/score_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:layout_below="@id/year_modal"
            android:layout_toEndOf="@id/text_score_modal"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
        />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_score_modal"
            android:layout_toEndOf="@id/image_modal"
        >
            <TextView
                android:id="@+id/synopsis_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
            />
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/more_informations_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_modal"
            android:layout_alignEnd="@+id/image_modal"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/black_gray"
            android:text="@string/more_informations"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>